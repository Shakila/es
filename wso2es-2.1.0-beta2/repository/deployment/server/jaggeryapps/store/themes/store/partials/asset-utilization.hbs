<div class="action-container right float-right">
    {{#if assets.isSubscribed}}
            <a id="btn-remove-subscribe" class="blue-button float-left" href="#modal-add-gadget"
                   data-toggle="modal"
                   data-aid="{{assets.id}}" data-type="{{assets.type}}"> {{>processed-asset-text}}</a>
    {{else}}
        {{#unless ../isUserDomainAndUrlDomainDifferent}}
            {{#if cuser.username}}
                <a id="btn-add-gadget" class="blue-button float-left" href="#modal-add-gadget"
                                   data-toggle="modal"
                                   data-aid="{{assets.id}}"
                                   data-type="{{assets.type}}"> {{>process-asset-text }}</a>
                {{else}}
                <a id="btn-add-gadget" class="blue-button margin-left float-left" href='{{url ""}}{{getLoginUrl .}}'
                               data-toggle="modal"
                               data-aid="{{assets.id}}" data-type="{{assets.type}}"> {{>process-asset-text }}</a>
                {{/if}}
        {{/unless}}
    {{/if}}
    {{#with assets}}
        {{#attributes }}
            <a class="gray-button blue-button float-left margin-left" href="{{overview_url}}" target="_blank" data-placement="bottom" data-toggle="tooltip" title="{{>asset-overview-text}}"><span class="fa fa-code"></span></a>
        {{/attributes}}
    {{/with}}
</div>


