{{#if isVisible}}
        <h1>Refine by</h1>
        {{#each assetCategoryFilterDetails}}
            <div class="panel">

                <a data-toggle="collapse" href="#{{this.id}}" aria-controls="{{this.id}}">
                    <span class="icon fw fw-stack">
                    <i class="fw fw-right fw-stack-1x"></i>
                    <i class="fw fw-circle-outline fw-stack-2x"></i>
                </span> {{this.text}}
                </a>

                <div id="{{this.id}}" class="panel-collapse collapse" role="tabpanel" aria-labelledby="{{this.divId}}">

                    {{#each this.children}}
                        <div class="checkbox">
                            <label>
                                <input type="checkbox" class="categorization-checkbox" name="{{this.parent}}"
                                       value="{{this.text}}">
                                {{this.text}}
                            </label>
                        </div>
                    {{/each}}
                    </ul>
                </div>
            </div>
        {{/each}}
{{/if}}
