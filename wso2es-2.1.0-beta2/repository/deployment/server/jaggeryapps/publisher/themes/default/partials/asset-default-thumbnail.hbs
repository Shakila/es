{{#if uniqueColor}}
    <div class="ast-img setbgcolor" style="background: {{uniqueColor}}" title="{{name}}">
    <span class="ast-type-icon" title="{{assets}}">
      <i class="{{icon}} fw-lg"></i>
      </span>
        <div class="ast-name-icon">{{nameToChar}}</div>
    </div>
{{else}}
    <div class="ast-img setbgcolor" style="background: {{assets.uniqueColor}}" title="{{name}}">
    <span class="ast-type-icon" title="{{assets.singularLabel}}">
      <i class="{{assets.icon}} fw-lg"></i>
      </span>
        <div class="ast-name-icon">{{assets.nameToChar}}</div>
    </div>
{{/if}}