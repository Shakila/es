<h2 class="field-title">
    <a data-toggle="collapse" href="#collapse{{label}}" aria-expanded="false" class="collapsing-h2 {{#if renderingMetaData.emptyTable}} collapsed {{/if}}" >
        <i class="cu-btn-exp-col btn-collapsed">{{label}}</i>
    </a>
</h2>
{{#if renderingMetaData.emptyTable}}
    <div class="{{#if renderingMetaData.emptyTable}} collapse {{else}} collapse in {{/if}}" id="collapse{{label}}">
        <div id="no-table-data">
            <b>No {{label}} data available</b>
        </div>
    </div>
{{else}}
    <div class="{{#if renderingMetaData.emptyTable}} collapse {{else}} collapse in {{/if}}" id="collapse{{label}}">
        {{#eachField this.fields}}
            <div class="row padding-bottom-lg">
                <div class="col-sm-2 custom-form-label text-right">{{label}} {{t ":"}}</div>
                {{#if this.url}}
                    <div id="{{label}}-value" class="col-sm-10"><a href="{{value}}">{{value}}</a></div>
                {{else}}
                    {{#if_equal this.type "checkbox"}}
                        {{renderCheckbox value}}
                    {{else}}
                        {{#if_equal this.type "file"}}
                            <img alt="thumbnail" onerror="this.dataset.error = true; this.src = ''; this.style.cursor = 'default'"
                                 data-noImage="No {{label}}"
                                 data-error="false"
                                 class="image-display no-image"
                                 src="{{url ""}}/storage/{{this.assetType}}/{{this.assetId}}/{{this.name.tableQualifiedName}}">
                        {{else}}
                        <div id="{{label}}-value" class="col-sm-10">{{value}}</div>
                        {{/if_equal}}
                    {{/if_equal}}
                {{/if}}
            </div>
        {{/eachField}}
    </div>
{{/if}}