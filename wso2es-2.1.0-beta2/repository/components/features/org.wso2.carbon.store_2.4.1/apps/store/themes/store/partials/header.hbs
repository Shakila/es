<!-- header -->
<header>
    <div class="row wr-global-header">
        <div class="col-xs-6 col-sm-8 app-logo">
            <a href="{{tenantedUrl ""}}{{meta.landingPage}}">
                <img src="{{url "/themes/store/img/logo.png"}}"/>
                {{> product-title}}
            </a>
        </div>

        <div class="col-xs-6 col-sm-4 wr-auth-container">
            <div class="wr-auth pull-right">
                {{#if cuser.username}}
                    <a href="#" data-toggle="dropdown" class="">
                        <div class="auth-img">
                            <i class="fw fw-user es-user-icon"></i>
                            <span id="logedInUser" class="hidden-xs-320 es-user-name">{{cuser.username}}</span>
                            <span class="caret"></span>
                        </div>
                    </a>

                    <div class="dropdown-menu">
                        <div class="cu-arrow"></div>
                        <div class="dropdown-menu-content">
                            {{signout .}}
                        </div>
                    </div>
                {{else}}
                    {{authentication .}}
                {{/if}}
            </div>
        </div>

    </div>
</header>
